{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "64tass",
    "isShellCommand": true,
    "args": [ "-Wall", "-a", "-C", "--cbm-prg", "-Lmandel.lst", "-omandel.prg", "mandel.s" ],
    "showOutput": "always",
    "echoCommand": true,
    "windows": {
        "options": {
            "env": {
                "Path": "${env.Path};${env.USERPROFILE}\\Dropbox\\devel\\C64\\64tass"
            }
        }
    },
    "problemMatcher": {
        "owner": "64tass",
        "fileLocation":["relative","${workspaceRoot}"],
        "pattern":{
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}